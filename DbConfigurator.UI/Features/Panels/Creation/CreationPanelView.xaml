<UserControl x:Class="DbConfigurator.UI.Features.Panels.Creation.CreationPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DbConfigurator.UI.Features.Panels.Creation" 
             xmlns:table="clr-namespace:DbConfigurator.UI.View.Table"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <table:AreaTableView Grid.Column="0" DataContext="{Binding AreaTable}"/>
        <table:BusinessUnitTableView Grid.Column="1" DataContext="{Binding BusinessUnitTable}"/>

        <table:CountryTableView  Grid.Row="1" Grid.ColumnSpan="2"  DataContext="{Binding CountryTable}"/>
    </Grid>
</UserControl>
