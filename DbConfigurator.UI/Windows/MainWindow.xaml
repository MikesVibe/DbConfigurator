<Window x:Class="DbConfigurator.UI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DbConfigurator.UI.Windows"
        xmlns:test="clr-namespace:DbConfigurator.UI.View.Panel"
        xmlns:addView="clr-namespace:DbConfigurator.UI.View.Add"
        xmlns:panel="clr-namespace:DbConfigurator.UI.ViewModel.Panel"
        mc:Ignorable="d"
        Title="DbConfigurator" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Window.Resources>
        <DataTemplate DataType="{x:Type panel:DistributionInformationPanelViewModel}">
            <test:DistributionInformationPanelView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type panel:RegionPanelViewModel}">
            <test:RegionPanelView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type panel:RecipientPanelViewModel}">
            <test:RecipientPanelView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type panel:CreationPanelViewModel}">
            <test:CreationPanelView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <test:NavigationPanelView Grid.Column="0" Margin="10"
            DataContext="{Binding NavigationViewModel}"/>

        <ContentControl Grid.Column="1"  Content="{Binding SelectedMainPanelViewModel}"/>

    </Grid>
</Window>
