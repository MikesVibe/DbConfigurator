<Window x:Class="DbConfigurator.UI.Windows.EditingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:detailView ="clr-namespace:DbConfigurator.UI.View.Detail"
        xmlns:viewModel="clr-namespace:DbConfigurator.UI.ViewModel.Add"
        xmlns:local="clr-namespace:DbConfigurator.UI.Windows"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="{Binding ViewHeight, Mode=TwoWay}" Width="{Binding ViewWidth, Mode=TwoWay}">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:AddAreaViewModel}">
            <detailView:AreaDetailView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:AddBuisnessUnitViewModel}">
            <detailView:BuisnessUnitDetailView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:AddCountryViewModel}">
            <detailView:CountryDetailView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:AddDistibutionInformationViewModel}">
            <detailView:DistributionInformationDetailView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:AddRecipientViewModel}">
            <detailView:RecipientDetailView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:AddRegionViewModel}">
            <detailView:RegionDetailView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding}" />
    </Grid>
</Window>
