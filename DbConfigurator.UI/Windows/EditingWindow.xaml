<Window x:Class="DbConfigurator.UI.Windows.EditingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:addView="clr-namespace:DbConfigurator.UI.View.Add"
        xmlns:viewModel="clr-namespace:DbConfigurator.UI.ViewModel"
        xmlns:local="clr-namespace:DbConfigurator.UI.Windows"
        mc:Ignorable="d"
        Title="EditingWindow" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:AddAreaViewModel}">
            <addView:AddAreaView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:AddBuisnessUnitViewModel}">
            <addView:AddBuisnessUnitView/>
        </DataTemplate>

    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding}" />
    </Grid>
</Window>
